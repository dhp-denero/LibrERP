<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="sale_order_requirement.action_add_sale_order_line" model="ir.actions.act_window">
            <field name="name">Add Order Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">order.requirement.line.add</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_order_requirement_line_add" model="ir.ui.view">
            <field name="name">Add Order Line</field>
            <field name="model">order.requirement.line.add</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Add Order Line" col="4" >
                <field name="order_id" invisible="1" colspan="4"/>
                <field name="order_line" required="1" colspan="8" />
                <button icon='gtk-cancel' special="cancel"
                    string="Cancel" />
                <button name="link" string="Ok"
                    type="object" icon="gtk-ok" />
            </form>
            </field>
        </record>

    </data>
</openerp>