<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_tax_form" model="ir.ui.view">
            <field name="name">account.tax.form</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"></field>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Italy AdE">
                        <group string = "IVA">
                            <field name="non_taxable_nature"></field>
                            <field name="law_reference" attrs="{'required': [('non_taxable_nature', '!=', False),('type_tax_use', '!=', 'purchase')], 'invisible': ['|',('non_taxable_nature', '=', False),('type_tax_use', '=', 'purchase')]}"></field>
                            <field name="payability"></field>
                        </group>
                        <newline />
                        <group string="Ritenuta Acconto">
                            <field name="withholding_tax"/>
                            <field name="causale_pagamento_id"/>
                        </group>
                        <newline />
                        <group string="Cassa Previdenziale">
                            <field name="social_security" />
                            <field name="social_security_type" />
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</openerp>
